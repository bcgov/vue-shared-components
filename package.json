{
  "name": "vue-shared-components",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "lint": "vue-cli-service lint",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "deploy-storybook": "storybook-to-ghpages",
    "build": "babel src -d build --copy-files",
    "prepare": "yarn run build",
    "test": "jest",
    "test-watch": "yarn run test -- --watch",
    "coverage": "jest --coverage",
    "update-snapshots": "jest --updateSnapshot"
  },
  "dependencies": {
    "@bcgov/bootstrap-theme": "github:bcgov/bootstrap-theme",
    "bootstrap": "^4.5.3",
    "core-js": "^3.8.1",
    "history": "^5.0.0",
    "jquery": "^3.5.1",
    "mdi-vue": "^1.8.1",
    "vue": "^2.6.11"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.3",
    "@storybook/vue": "^6.1.10",
    "@storybook/addon-docs": "^6.0.28",
    "@storybook/addon-actions": "^6.1.11",
    "@storybook/addon-links": "^6.5.15",
    "@storybook/addon-essentials": "^6.1.11",
    "@storybook/storybook-deployer": "^2.8.6",
    "@testing-library/vue": "^5.6.1",
    "@vue/cli-plugin-babel": "~4.5.9",
    "@vue/cli-plugin-eslint": "~4.5.6",
    "@vue/cli-service": "~4.5.8",
    "@vue/test-utils": "^1.1.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.2",
    "babel-preset-env": "^1.7.0",
    "eslint": "^7.15.0",
    "jest": "^26.6.3",
    "eslint-plugin-vue": "^7.1.0",
    "jest-serializer-vue": "^2.0.2",
    "jest-sonar-reporter": "^2.0.0",
    "react-is": "^16.13.1",
    "vue-jest": "^3.0.6",
    "vue-template-compiler": "^2.6.11"
  },
  "jest": {
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/(?!mdi-vue)"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|PNG|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga|pdf)$": "<rootDir>/src/AssetsTransformer.js",
      "\\.(css|less)$": "<rootDir>/src/AssetsTransformer.js"
    },
    "collectCoverageFrom": [
      "src/**/*.vue",
      "!src/*.vue",
      "!src/modules/**",
      "!src/*.js",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "moduleFileExtensions": [
      "js",
      "vue"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest",
      ".*\\.(vue)$": "<rootDir>/node_modules/vue-jest"
    },
    "snapshotSerializers": [
      "<rootDir>/node_modules/jest-serializer-vue"
    ],
    "verbose": true,
    "testResultsProcessor": "jest-sonar-reporter",
    "collectCoverage": true,
    "coverageReporters": [
      "text",
      "lcov"
    ],
    "coverageDirectory": "coverage"
  },
  "jestSonar": {
    "reportPath": "coverage",
    "reportFile": "test-report.xml",
    "indent": 4
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {},
    "overrides": [
      {
        "files": [
          "**/*.spec.js",
          "**/*.test.js"
        ],
        "env": {
          "jest": true
        }
      }
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
